doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    include partials/styles.partials.pug
    title #{ title }
  body 
    .container-box 
      .register-login-container
        form.register-form(action='/reset-password' method="POST") 
          //- Flash messages
          include partials/flash-messages.partials.pug
          //- Flash messages
          .text-center.mb-1
            a.logo-style.white-text(href='/') Recipify

          div.text-center.mb-1
            h4 Enter your new password

            .form-group.mb-1
              label(for="password") New password
              input#password.mt-1(type='password', placeholder='New password' name="password" )

            .form-group.mb-1
              label(for="password2") Confirm password
              input#password2.mt-1(type='password', placeholder='Repeat password' name="password2" )

          input(type="hidden", name="token" value=token)

          .text-center
            input.btn.green-btn(type='submit', value='Change password')

          .separator

          .mt-1.final-links
            a.white-text.bold-text(href='/') Home
